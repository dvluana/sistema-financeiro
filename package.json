{
  "name": "sistema-financeiro",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "node": "20.x"
  },
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "dev": "concurrently -n api,web -c blue,magenta \"npm run dev:api\" \"npm run dev:web\"",
    "dev:all": "npm run preflight && npm run dev",
    "dev:api": "npm run dev --workspace=apps/api",
    "dev:web": "npm run dev --workspace=apps/web",
    "preflight": "npm run health-check --workspace=apps/api",
    "build": "npm run build:api && npm run build:web",
    "build:api": "npm run build --workspace=apps/api",
    "build:web": "npm run build --workspace=apps/web",
    "start": "npm run start --workspace=apps/api",
    "typecheck": "npm run typecheck --workspaces --if-present",
    "clean": "rm -rf apps/*/dist apps/*/node_modules/.vite",
    "heroku-postbuild": "npm run build:api"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
